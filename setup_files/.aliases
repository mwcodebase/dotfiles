# shortcuts
alias install='sudo apt-get install'
alias install_updates='apt-get -qq update && apt-get -qq upgrade'
alias c='clear'
alias list='ls -a'
alias tar='tar -czvf'
alias untar='tar -xvzf'
alias history='less ~/.zsh_history'
alias projects='cd /mnt/c/Users/$WINDOWS_USER/Documents/Projects'

# commands
alias refresh='source ~/.zshrc'
alias search='find . -name'

# functions
test_app () {
  docker run -d --name=$1 -p=8080:8080 --expose=8080 --rm $1
}

# environment updates
alias audit_aliases='diff --suppress-common-lines ~/.aliases /mnt/c/Users/$WINDOWS_USER/Documents/Projects/env_setup/Windows/setup_files/.aliases'
alias copy_to_aliases='cp ~/.aliases /mnt/c/Users/$WINDOWS_USER/Documents/Projects/env_setup/Windows/setup_files/.aliases'
alias copy_from_aliases='cp /mnt/c/Users/$WINDOWS_USER/Documents/Projects/env_setup/Windows/setup_files/.aliases ~/.aliases'

